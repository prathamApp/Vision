<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnAnalyze"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Analyze Image" />

    <Button
        android:id="@+id/btnAnalyzeInDomains"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Analyze Celebrities " />

    <Button
        android:id="@+id/btnRecognize"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Analyze Text" />

    <Button
        android:id="@+id/btnHandwritingRecognize"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Analyze Handwriting Text" />

</LinearLayout>
